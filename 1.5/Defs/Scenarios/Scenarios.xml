<?xml version="1.0" encoding="UTF-8"?>  

<Defs>

    <!-- Easy Start -->

    <ScenarioDef>
        <defName>pphhyy_EasyStart</defName>
        <label>URMC Easy Start</label>
        <description>Distress signals have come from this world, so its time for the URMC to clear it out. Whether its a bug hunt, machine purge or just having fun blowing up raiders this planet needs your help.</description>
        <scenario>
          <summary>Group of ultimate bad asses.</summary>
          <playerFaction>
            <def>PlayerFaction</def>
            <factionDef>pphhyy_URMC_Outpost</factionDef>
          </playerFaction>
          <parts>
    
            <!-- Config pages -->
            <li Class="ScenPart_ConfigPage_ConfigureStartingPawns_KindDefs">
                <def>ConfigurePawnsKindDefs</def>
                <pawnChoiceCount>6</pawnChoiceCount>
         <kindCounts>
            <li>
              <kindDef>pphhyy_Officer</kindDef>
              <count>1</count>
              <requiredAtStart>true</requiredAtStart>
            </li>
            <li>
                <kindDef>pphhyy_Medic</kindDef>
                <count>1</count>
                <requiredAtStart>true</requiredAtStart>
              </li>
              <li>
                <kindDef>pphhyy_Marine</kindDef>
                <count>4</count>
                <requiredAtStart>true</requiredAtStart>
              </li>
          </kindCounts> 
              </li>
              

            <!-- Player starting stuff spawn method-->
            <li Class="ScenPart_PlayerPawnsArriveMethod">
              <def>PlayerPawnsArriveMethod</def>
              <method>Standing</method>
            </li>
    
            <!-- Player starting stuff -->
    
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <stuff>Steel</stuff>
              <thingDef>pphhyy_S12CombatMachete</thingDef>
            </li>
    
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <count>3</count>
              <thingDef>pphhyy_M43PulseRifle</thingDef>
            </li>
    
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <thingDef>pphhyy_M1PulsePistol</thingDef>
            </li>
    
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <thingDef>pphhyy_M45PulseLMG</thingDef>
            </li>
    
            <li Class="ScenPart_StartingThing_Defined">
                <def>StartingThing_Defined</def>
                <thingDef>pphhyy_M50XReconRifle</thingDef>
              </li>

           <li Class="ScenPart_StartingThing_Defined">
               <def>StartingThing_Defined</def>
               <thingDef>MedicineIndustrial</thingDef>
                <count>30</count>
           </li>

           <li Class="ScenPart_StartingThing_Defined">
            <def>StartingThing_Defined</def>
            <thingDef>MealSurvivalPack</thingDef>
             <count>30</count>
        </li>

            <!-- Starting research -->
            <li Class="ScenPart_StartingResearch">
                <def>StartingResearch</def>
                <project>pphhyy_URMCBasic</project>
              </li>        
    
            <!-- Game start dialog -->
            <li Class="ScenPart_GameStartDialog">
              <def>GameStartDialog</def>
              <text>Group of ultimate bad asses.</text>
              <closeSound>GameStartSting</closeSound>
            </li>
    
          </parts>
        </scenario>
      </ScenarioDef>

      <FactionDef ParentName="PlayerFactionBase">
        <defName>pphhyy_URMC_Outpost</defName>
        <label>outpost</label>
        <description>PLACEHOLDER</description>
        <isPlayer>true</isPlayer>
        <basicMemberKind>Colonist</basicMemberKind>
        <pawnSingular>colonist</pawnSingular>
        <pawnsPlural>colonists</pawnsPlural>
        <techLevel>Spacer</techLevel>
        <factionNameMaker>NamerFactionOutlander</factionNameMaker>
        <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
        <allowedCultures><li>Rustican</li></allowedCultures>
        <backstoryFilters>
          <li>
            <categories>
              <li>Offworld</li>
            </categories>
          </li>
        </backstoryFilters>
        <factionIconPath>HelmetsAndHats/M10/M10</factionIconPath>
        <startingResearchTags>
          <li>ClassicStart</li>
        </startingResearchTags>
        <startingTechprintsResearchTags>
          <li>ClassicStart</li>
          <li>ClassicStartTechprints</li>
        </startingTechprintsResearchTags>
        <apparelStuffFilter>
          <thingDefs>
            <li>Synthread</li>
          </thingDefs>
        </apparelStuffFilter>
      </FactionDef>

    <!-- Hard Start -->

    <ScenarioDef>
        <defName>pphhyy_HardStart</defName>
        <label>URMC Hard Start</label>
        <description>After countless battles your platoon was finally reduced to just you. Time to make this uncivilized world pay for all your fallen Marine brothers and sisters.</description>
        <scenario>
          <summary>Pissed off Marine Survivor</summary>
          <playerFaction>
            <def>PlayerFaction</def>
            <factionDef>pphhyy_URMC_SoleSurvivor</factionDef>
          </playerFaction>
          <parts>
    
            <!-- Config pages -->
            <li Class="ScenPart_ConfigPage_ConfigureStartingPawns_KindDefs">
                <def>ConfigurePawnsKindDefs</def>
                <pawnChoiceCount>3</pawnChoiceCount>
                <leftBehindPawnKind>pphhyy_Veteran</leftBehindPawnKind>
         <kindCounts>
            <li>
              <kindDef>pphhyy_Veteran</kindDef>
              <count>1</count>
              <requiredAtStart>true</requiredAtStart>
            </li>
          </kindCounts> 
              </li>
              

            <!-- Player starting stuff spawn method-->
            <li Class="ScenPart_PlayerPawnsArriveMethod">
              <def>PlayerPawnsArriveMethod</def>
              <method>Standing</method>
            </li>
    
            <!-- Player starting stuff -->
    
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <stuff>Steel</stuff>
              <thingDef>pphhyy_S12CombatMachete</thingDef>
            </li>
    
            <li Class="ScenPart_StartingThing_Defined">
              <def>StartingThing_Defined</def>
              <thingDef>pphhyy_M43PulseRifle</thingDef>
            </li>
    
           <li Class="ScenPart_StartingThing_Defined">
               <def>StartingThing_Defined</def>
               <thingDef>MedicineIndustrial</thingDef>
                <count>5</count>
           </li>

           <li Class="ScenPart_StartingThing_Defined">
            <def>StartingThing_Defined</def>
            <thingDef>MealSurvivalPack</thingDef>
             <count>5</count>
        </li>


            <!-- Game start dialog -->
            <li Class="ScenPart_GameStartDialog">
              <def>GameStartDialog</def>
              <text>Pissed off Marine Survivor.</text>
              <closeSound>GameStartSting</closeSound>
            </li>
    
          </parts>
        </scenario>
      </ScenarioDef>

      <FactionDef ParentName="PlayerFactionBase">
        <defName>pphhyy_URMC_SoleSurvivor</defName>
        <label>sole survivor</label>
        <description>Pissed off Marine Survivor</description>
        <isPlayer>true</isPlayer>
        <basicMemberKind>Colonist</basicMemberKind>
        <pawnSingular>colonist</pawnSingular>
        <pawnsPlural>colonists</pawnsPlural>
        <techLevel>Spacer</techLevel>
        <factionNameMaker>NamerFactionOutlander</factionNameMaker>
        <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
        <allowedCultures><li>Rustican</li></allowedCultures>
        <backstoryFilters>
          <li>
            <categories>
              <li>Offworld</li>
            </categories>
          </li>
        </backstoryFilters>
        <factionIconPath>HelmetsAndHats/M10/M10</factionIconPath>
        <startingResearchTags>
          <li>ClassicStart</li>
        </startingResearchTags>
        <startingTechprintsResearchTags>
          <li>ClassicStart</li>
          <li>ClassicStartTechprints</li>
        </startingTechprintsResearchTags>
        <apparelStuffFilter>
          <thingDefs>
            <li>Synthread</li>
          </thingDefs>
        </apparelStuffFilter>
      </FactionDef>



</Defs>